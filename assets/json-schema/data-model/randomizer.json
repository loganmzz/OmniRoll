{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://loganmzz.github.io/OmniRoll/schemas/data-model/randomizer.json",
  "title": "Boardgame Universal Randomizer - Data Model | Randomizer",
  "type": "object",
  "required": [
    "key",
    "name",
    "pools",
    "slots"
  ],
  "properties": {
    "key": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9-]*$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "pools": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "key"
        ],
        "properties": {
          "key": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9-]*$"
          },
          "criteria": {
            "type": "string"
          }
        }
      }
    },
    "groups": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "key"
        ],
        "properties": {
          "key": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9-]*$"
          },
          "name": {
            "type": "string"
          }
        }
      }
    },
    "slots": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "key",
          "pool"
        ],
        "properties": {
          "key": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9-]*$"
          },
          "name": {
            "type": "string"
          },
          "pool": {
            "type": "string",
            "pattern": "^[a-z0-9][a-z0-9-]*$"
          },
          "group": {
            "type": "string"
          },
          "pick": {
            "type": "string",
            "enum": ["remove", "keep"],
            "default": "remove"
          },
          "criteria": {
            "type": "string"
          }
        }
      }
    },
    "merge-strategy": {
      "type": "string",
      "enum": ["merge", "override"],
      "default": "override"
    },
    "updated-at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
