{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://loganmzz.github.io/boardgame-universal-randomizer/schemas/data-model/component.json",
  "title": "Boardgame Universal Randomizer - Data Model | Module",
  "type": "object",
  "required": [
    "key",
    "name"
  ],
  "properties": {
    "key": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9-]*$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "properties": {
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          {
            "type": "boolean"
          },
          {
            "type": "number"
          },
          {
            "type": "string"
          },
          {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        ]
      }
    },
    "merge-strategy": {
      "type": "string",
      "enum": ["merge", "override"],
      "default": "override"
    },
    "updated-at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
